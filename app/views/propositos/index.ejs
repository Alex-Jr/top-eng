<html>
  <head>
    <%- include('../shared/head.ejs') %>
    <script src="./js/propositos/index.js"></script>
  </head>

  <body>
    <%- include('../shared/nav.ejs') %>
    <div class="container">
  
      <div class="row mt-4">
        <div class="col-md-6">
          <p class="fs-2">Lista de propositos</p>
        </div>

        <div class="col-md-4">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="nome" id="busca">
            <button class="btn btn-outline-secondary" type="button" id="button-addon2" onclick="buscar(this)">Buscar</button>
          </div>
        </div>
        
        <div class="col-md-2">
          <a href="./propositos/new"><button type="button" class="btn btn-primary">Novo Propósito</button></a>
        </div>
      </div>
  
      <table class="table mt-4">
        <thead>
          <tr>
            <th scope="col">Código</th>
            <th scope="col">Nome</th>
            <th scope="col">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < propositos.length; i++) { %> 
            <tr>
              <th scope="row"><%= propositos[i].id %></th>
              <td><%= propositos[i].nome %></td>
              <td>
                <a href="./propositos/<%= propositos[i].id %>/edit"><button type="button">Editar</button></a>
                <button onclick="apagar(<%= propositos[i].id %>)"> Apagar </button> 
              </td>
            </tr>
          <% } %>
      </table>

    </div>
  </body>
</html>